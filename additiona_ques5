#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int x) {
        data = x;
        left = right = NULL;
    }
};

int findPos(int inorder[], int n, int x) {
    for (int i = 0; i < n; i++)
        if (inorder[i] == x)
            return i;
    return -1;
}

Node
