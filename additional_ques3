#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int x) {
        data = x;
        left = right = NULL;
    }
};

int maxDepth(Node* r) {
    if (r == NULL) return 0;

    int leftDepth = maxDepth(r->left);
    int rightDepth = maxDepth(r->right);

    if (leftDepth > rightDepth)
        return leftDepth + 1;
    else
        return rightDepth + 1;
}

int main() {
    Node* root = new Node(1);
    root->left = new Node(2);
    root->right = new Node(3);
    root->left->left = new Node(4);

    cout << "Maximum Depth = " << maxDepth(root);
}
