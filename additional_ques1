#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int x) {
        data = x;
        left = right = NULL;
    }
};

int sumLeftLeaves(Node* r) {
    if (r == NULL) return 0;

    int sum = 0;

    if (r->left != NULL &&
        r->left->left == NULL &&
        r->left->right == NULL)
        sum = sum + r->left->data;

    sum = sum + sumLeftLeaves(r->left);
    sum = sum + sumLeftLeaves(r->right);

    return sum;
}

int main() {
    Node* root = new Node(10);
    root->left = new Node(5);
    root->right = new Node(20);
    root->left->left = new Node(3);
    root->right->right = new Node(30);

    cout << sumLeftLeaves(root);
}
